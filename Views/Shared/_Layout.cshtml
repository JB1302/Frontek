    <div class="category-strip">
        <div class="container">
            <ul class="nav py-2 gap-1 flex-nowrap overflow-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Destacados</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Nuevos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Ofertas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Hardware</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Software</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Accesorios</a>
                </li>
            </ul>
        </div>
    </div>
        -->

    <!-- CONTENIDO -->
    <main class="container content-wrapper">
        <div class="content-card">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer>
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-2">
            <span>
                &copy; @DateTime.Now.Year · Frontek Store · Todos los derechos reservados
            </span>
            <span>
                <a href="#">Términos</a> · <a href="#">Privacidad</a>
            </span>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>